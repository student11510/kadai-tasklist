<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= f.label :status, 'ステータス' %>
<%= f.select :status, [["作業中","working"], ["作業終了","complete"]] %>

<%= f.label :content, 'タスク' %>
<%= f.text_field :content %>

<%= f.submit '投稿' %>
<% end %>