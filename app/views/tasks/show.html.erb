<h1>id : <%= @task.id %> のタスク詳細ページ</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
</table>

<%= link_to '編集する', edit_task_path(@task), class: 'btn btn-primary' %>
<%= link_to '削除する', task_path(@task), method: :delete, data: {confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
